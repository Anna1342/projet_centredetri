<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="15.0" xmlns="http://javafx.com/javafx/21.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.centredetri.CreationCompteController">
   <children>
      <Label text="Créer un compte" style="-fx-font-size: 20px; -fx-font-weight: bold;" />
      <TextField fx:id="usernameField" maxWidth="200.0" promptText="Nom d'utilisateur" />
      <PasswordField fx:id="passwordField" maxWidth="200.0" promptText="Mot de passe" />
      <Button fx:id="createAccountButton" text="Créer le compte" onAction="#handleCreateAccountClick" />
      <Label fx:id="errorLabel" text="" style="-fx-text-fill: red;" />
   </children>
</VBox>
